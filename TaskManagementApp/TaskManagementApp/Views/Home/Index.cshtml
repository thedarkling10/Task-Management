@{
    ViewData["Title"] = "TaskFlow - Elelvate your porject management!";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<style>
    .hero {
        background: linear-gradient(135deg, #0d6efd, #6610f2);
        color: white;
        padding: 100px 0;
        text-align: center;
    }

        .hero h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .hero p {
            font-size: 1.25rem;
            opacity: 0.9;
        }

    .section-title {
        font-weight: bold;
        margin-top: 50px;
        margin-bottom: 30px;
        text-align: center;
    }

    .feature-card {
        border: none;
        transition: 0.3s;
    }

        .feature-card:hover {
            transform: translateY(-7px);
            box-shadow: 0px 8px 25px rgba(0,0,0,0.15);
        }

</style>

<div class="hero">
    <h1>Organize your projects smartly</h1>
    <p>Modern Task Management platform for teams and collaborative projects.</p>

    @if (!User.Identity.IsAuthenticated)
    {
        <a href="/Identity/Account/Login" class="btn btn-light btn-lg mt-3 me-2">Autentificare</a>
        <a href="/Identity/Account/Register" class="btn btn-outline-light btn-lg mt-3">Înregistrare</a>
    }
    else
    {
        <a href="/Dashboard" class="btn btn-light btn-lg mt-3 me-2">Dashboard</a>
        <a href="/Projects" class="btn btn-outline-light btn-lg mt-3">My projects</a>

        @if (User.IsInRole("Admin"))
        {
            <a href="/Admin" class="btn btn-warning btn-lg mt-3 ms-2">Admin Panel</a>
        }
    }
</div>

<!-- FEATURES -->
<div class="container">
    <h2 class="section-title">Main Features</h2>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card feature-card p-4">
                <h4>✔ Project Management</h4>
                <p>Create projects, invite members, and track the progress of each team.</p>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card feature-card p-4">
                <h4>📌 Smart Tasks</h4>
                <p>Add tasks, assign members, and set statuses for progress.</p>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card feature-card p-4">
                <h4>💬 Comment System</h4>
                <p>Collaborate directly on tasks through real-time updated comments.</p>
            </div>
        </div>
    </div>
</div>

<!-- TESTIMONIALS -->
<div class="container mt-5">
    <h2 class="section-title">What Other Users Say</h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card p-4">
                <p>“An intuitive platform that helped me coordinate my team much more efficiently!”</p>
                <strong>— Andrei, Project Manager</strong>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4">
                <p>“I like the personalized dashboard, I see everything very clearly.”</p>
                <strong>— Ioana, Developer</strong>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4">
                <p>“The AI feature is brilliant! The quick summaries help me daily.”</p>
                <strong>— Mihai, Team Lead</strong>
            </div>
        </div>
    </div>
</div>
 
<!-- CTA -->
<div class="text-center my-5">
    @if (!User.Identity.IsAuthenticated)
    {
        <a href="/Identity/Account/Register" class="btn btn-primary btn-lg px-5">Start Now</a>
    }
    else
    {
        <a href="/Dashboard" class="btn btn-primary btn-lg px-5">Go To Dashboard</a>
    }
</div>
