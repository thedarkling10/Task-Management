@model IEnumerable<TaskManagementApp.Models.Task>

@{
    ViewBag.Title = "Dashboard Personal";
    var projects = ViewBag.Projects as List<TaskManagementApp.Models.Project>;
    var upcoming = ViewBag.Upcoming as List<TaskManagementApp.Models.Task>;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1><i class="bi bi-speedometer2"></i> Dashboard-ul meu</h1>
            <div class="text-muted">Salut, <strong>@User.Identity.Name</strong>!</div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-lg-4">

            <div class="card shadow-sm border-danger mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0"><i class="bi bi-exclamation-triangle"></i> Deadline-uri apropiate</h5>
                </div>
                <div class="card-body p-0">
                    @if (upcoming != null && upcoming.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var t in upcoming)
                            {
                                <a href="/Tasks/Show/@t.Id" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1 text-truncate" style="max-width: 200px;">@t.Title</h6>
                                        <span class="badge bg-danger">@t.EndDate.ToString("dd MMM")</span>
                                    </div>
                                    <small class="text-muted">Proiect: @t.Project?.Title</small>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-3 text-center text-muted">Nu ai termene limită în următoarele 7 zile.</div>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="bi bi-folder2-open"></i> Proiectele mele active</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var p in projects)
                        {
                            <a href="/Projects/Show/@p.Id" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                @p.Title
                                <span class="badge bg-secondary rounded-pill">Vezi</span>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0">Task-urile mele curente</h5>

                    <form method="get" asp-action="Dashboard" class="d-inline-block">
                        <select name="statusFilter" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                            <option value="">Toate statusurile</option>
                            <option value="NotStarted" selected="@(ViewBag.SelectedFilter == "NotStarted")">Neîncepute</option>
                            <option value="InProgress" selected="@(ViewBag.SelectedFilter == "InProgress")">În curs</option>
                            <option value="Finished" selected="@(ViewBag.SelectedFilter == "Finished")">Finalizate</option>
                        </select>
                    </form>
                </div>

                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var group in Model.GroupBy(t => t.Status))
                        {
                            <h6 class="text-uppercase text-muted fw-bold mt-4 mb-3 border-bottom pb-2">
                                Status: @(group.Key ?? "Nespecificat")
                            </h6>

                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <tbody>
                                        @foreach (var task in group)
                                        {
                                            <tr>
                                                <td style="width: 60%">
                                                    <div class="fw-bold">@task.Title</div>
                                                    <small class="text-muted">@task.Project?.Title</small>
                                                </td>
                                                <td class="text-center">
                                                    @{
                                                        var badgeClass = task.Status == "Finished" ? "bg-success" :
                                                        task.Status == "InProgress" ? "bg-warning text-dark" : "bg-light text-dark border";
                                                    }
                                                    <span class="badge @badgeClass">@task.Status</span>
                                                </td>
                                                <td class="text-end">
                                                    <a href="/Tasks/Show/@task.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> Detalii
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-clipboard-x display-4 text-muted"></i>
                            <p class="mt-3">Nu s-au găsit task-uri pentru criteriile selectate.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}