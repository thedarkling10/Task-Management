@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@model List<TaskManagementApp.Models.Comment>

@{
    
    var userCurent = await UserManager.GetUserAsync(User);
    var userCurentId = userCurent?.Id;
    var esteAdmin = User.IsInRole("Administrator"); }

<div class="mt-4">
    <h5 class="fw-bold mb-4"><i class="bi bi-chat-left-text me-2"></i>Comments (@Model.Count)</h5>

    @if (Model.Count == 0)
    {
        <div class="text-center py-4 text-muted bg-light rounded-3">
            <i class="bi bi-chat-square-dots fs-3 mb-2 d-block opacity-50"></i>
            <p class="mb-0">No comments yet. Be the first to start the discussion!</p>
        </div>
    }
    else
    {
        <div class="vstack gap-3">
            @foreach (var comment in Model)
            {
                var esteAutor = comment.UserId == userCurentId;

                <div class="d-flex gap-3 @(esteAutor ? "flex-row-reverse" : "")">

                    <div class="flex-shrink-0">
                        <div class="rounded-circle d-flex align-items-center justify-content-center fw-bold text-white shadow-sm"
                             style="width: 40px; height: 40px; background-color: @(esteAutor ? "#0d6efd" : "#6c757d");">
                            @comment.User.UserName.Substring(0, 1).ToUpper()
                        </div>
                    </div>

                    <div class="flex-grow-1">
                        <div class="card border-0 shadow-sm rounded-4 @(esteAutor ? "bg-primary text-white" : "bg-light text-dark")">
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="@(esteAutor ? "text-white-50" : "text-muted") fw-bold">
                                        @comment.User.UserName
                                    </small>
                                    <small class="@(esteAutor ? "text-white-50" : "text-muted")" style="font-size: 0.75rem;">
                                        @comment.Date.ToString("dd MMM, HH:mm")
                                    </small>
                                </div>

                                <p class="mb-0" style="white-space: pre-wrap;">@comment.Content</p>
                            </div>
                        </div>

                        @if (esteAutor || esteAdmin)
                        {
                            <div class="mt-1 @(esteAutor ? "text-end me-2" : "ms-2")">
                                <a href="/Comments/Edit/@comment.Id" class="text-decoration-none small text-muted me-2 hover-underline">
                                    Edit
                                </a>
                                <form method="post" action="/Comments/Delete/@comment.Id" style="display:inline"
                                      onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-link p-0 text-danger text-decoration-none small hover-underline border-0 bg-transparent">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-underline:hover {
        text-decoration: underline !important;
    }
</style>