@model List<TaskManagementApp.Models.Comment>

@{
    var userCurentId = User.FindFirst("sub")?.Value;
    var esteAdmin = User.IsInRole("Administrator");
}

@if (Model.Count == 0)
{
    <div class="alert alert-info"> 
        Nu există comentarii.
    </div>
}
else
{
    @foreach (var comment in Model)
    {
        var esteAutor = comment.UserId == userCurentId;
        var taskId = comment.TaskId;

        <div class="card mb-3 shadow-sm border-0">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <small class="text-muted d-block">
                            Postat de: <strong>@comment.User.UserName</strong> la @comment.Date.ToString("dd.MM.yyyy HH:mm")
                        </small>

                        <p class="card-text mt-2">@comment.Content</p>
                    </div>

                    @if (esteAutor || esteAdmin)
                    {
                        <div class="btn-group" role="group">
                            <a href="/Comments/Edit/@comment.Id" class="btn btn-sm btn-warning me-2">✏️</a>

                            <form method="post" action="/Comments/Delete/@comment.Id"
                                  style="display:inline" onsubmit="return confirm('Sunteți sigur că doriți să ștergeți acest comentariu?');">
                                @Html.AntiForgeryToken()

                                <button type="submit" class="btn btn-sm btn-danger">🗑️</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
}