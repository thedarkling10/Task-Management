@model TaskManagementApp.Models.Comment
@{
    ViewBag.Title = "Comentariu nou";
    var task = ViewBag.Task;
}

<h2>Comentariu nou pentru task-ul: @task.Title</h2>

<form asp-action="New" method="post">
    <input type="hidden" asp-for="TaskId" />

    <div class="form-group mb-3">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Adaugă</button>
    <a class="btn btn-secondary" href="/Comments?taskId=@task.Id">Renunță</a>
</form>
