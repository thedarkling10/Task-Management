@model TaskManagementApp.Models.Project

@{
    ViewData["Title"] = "Edit Project";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-warning bg-gradient text-dark p-4 border-0">
                    <h3 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>Edit Project</h3>
                    <p class="mb-0 opacity-75 small">Update project details.</p>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Edit" method="post">

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold text-muted small text-uppercase">Project Title</label>
                            <input asp-for="Title" class="form-control form-control-lg bg-light border-0" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold text-muted small text-uppercase">Description</label>
                            <textarea asp-for="Description" class="form-control bg-light border-0" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                            <a asp-controller="Projects" asp-action="Show" asp-route-id="@Model.Id" class="btn btn-light btn-lg px-4 fw-medium text-muted">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-5 rounded-pill shadow-sm fw-bold text-dark">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>