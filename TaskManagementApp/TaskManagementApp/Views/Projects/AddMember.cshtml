@model TaskManagementApp.Models.Project

@{
    ViewData["Title"] = "Adaugă membru";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container col-md-6 mt-5">

    <div class="card feature-card p-4">
        <h2 class="mb-3">Adaugă membru în proiect</h2>

        <form method="post"
              asp-controller="Projects"
              asp-action="AddMember"
              asp-route-projectId="@Model.Id">

            <div class="mb-3">
                <label class="form-label">Select an user</label>
                <select name="userId" class="form-select">
                    @foreach (var user in ViewBag.Users)
                    {
                        <option value="@user.Id">@user.UserName</option>
                    }
                </select>
            </div>

            <button class="btn btn-primary btn-lg">Add</button>

            <a asp-controller="Projects"
               asp-action="Show"
               asp-route-id="@Model.Id"
               class="btn btn-outline-secondary ms-2">Back</a>
        </form>
    </div>
</div>
