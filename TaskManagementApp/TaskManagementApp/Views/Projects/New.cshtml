@model TaskManagementApp.Models.Project

@{
    ViewData["Title"] = "Create Project";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white p-4 border-0">
                    <h3 class="mb-0 fw-bold"><i class="bi bi-folder-plus me-2"></i>Create New Project</h3>
                    <p class="mb-0 opacity-75 small">Start organizing your tasks effectively.</p>
                </div>

                <div class="card-body p-5">

                    @if (TempData["message"] != null)
                    {
                        <div class="alert @TempData["messageType"] alert-dismissible fade show mb-4 rounded-3" role="alert">
                            @TempData["message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="New" method="post">
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold text-muted small text-uppercase">Project Title</label>
                            <input asp-for="Title" class="form-control form-control-lg bg-light border-0" placeholder="e.g. Website Redesign" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold text-muted small text-uppercase">Description</label>
                            <textarea asp-for="Description" class="form-control bg-light border-0" rows="5" placeholder="Describe the goals of this project..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                            <a asp-controller="Projects" asp-action="Index" class="btn btn-light btn-lg px-4 fw-medium text-muted">Cancel</a>
                            <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm fw-bold">
                                Create Project
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}