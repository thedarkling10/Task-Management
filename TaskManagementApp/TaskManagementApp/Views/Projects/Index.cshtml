@{
    ViewData["Title"] = "Proiectele mele";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<br />
<h2 class="text-center">Proiectele tale</h2>
<br />

@if (ViewBag.Message != null)
{
    <h2 class="p-3 rounded-3 text-center mb-5 alert @ViewBag.Alert">
        @ViewBag.Message
    </h2>
}

@if (ViewBag.Projects.Count == 0)
{
    <div class="alert alert-info text-center">
        Nu aveți proiecte încă.
    </div>
}
else
{
    @foreach (var project in ViewBag.Projects)
    {
        <partial name="_ProjectInfo" model="project"></partial>
    }
}

<div class="text-center mt-4">
    <a asp-controller="Projects"
       asp-action="New"
       class="btn btn-primary btn-lg">
        ➕ Creează proiect
    </a>
</div>
<br />
