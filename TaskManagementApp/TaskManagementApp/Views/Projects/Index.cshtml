@{
    ViewData["Title"] = "My Projects";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-folder2-open text-primary me-2"></i>My Projects
            </h2>
            <p class="text-muted mb-0">Manage and track your ongoing work.</p>
        </div>

        @if (ViewBag.Projects.Count > 0)
        {
            <a asp-controller="Projects" asp-action="New" class="btn btn-primary rounded-pill px-4 shadow-sm">
                <i class="bi bi-plus-lg me-1"></i> New Project
            </a>
        }
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm rounded-3 mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.Projects.Count == 0)
    {
        <div class="text-center py-5 bg-light rounded-4 border border-dashed">
            <div class="mb-3">
                <span class="bg-white p-4 rounded-circle shadow-sm d-inline-block">
                    <i class="bi bi-folder-plus fs-1 text-primary opacity-75"></i>
                </span>
            </div>
            <h4 class="fw-bold text-dark">No projects yet</h4>
            <p class="text-muted mb-4">It looks quiet here. Start by creating your first project.</p>

            <a asp-controller="Projects" asp-action="New" class="btn btn-primary btn-lg px-5 rounded-pill">
                Create Project
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var project in ViewBag.Projects)
            {
                /* Aici împachetăm partial-ul într-o coloană.
                Pe desktop (lg) vor fi 3 proiecte pe rând, pe tableta (md) 2.
                */
                <div class="col-md-6 col-lg-4 d-flex align-items-stretch">
                    <div class="w-100">
                        <partial name="_ProjectInfo" model="project" />
                    </div>
                </div>
            }
        </div>
    }
</div>