@model TaskManagementApp.Models.Task

@{
    ViewData["Title"] = "Create Task";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <div class="card-header bg-primary text-white p-4 border-0">
                    <h3 class="mb-0 fw-bold"><i class="bi bi-plus-circle-dotted me-2"></i>Create New Task</h3>
                    <p class="mb-0 opacity-75 small">Add a new task to your project.</p>
                </div>

                <div class="card-body p-5">

                    @if (TempData["message"] != null)
                    {
                        <div class="alert @(TempData["messageType"]) alert-dismissible fade show rounded-3 mb-4" role="alert">
                            @TempData["message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["DebugTask"] != null)
                    {
                        <div class="alert alert-info border-0 shadow-sm rounded-3 small">
                            <strong><i class="bi bi-bug me-1"></i> Debug Info:</strong> @TempData["DebugTask"]
                        </div>
                    }

                    @if (TempData["DebugErrors"] != null)
                    {
                        <div class="alert alert-warning border-0 shadow-sm rounded-3 small">
                            <strong><i class="bi bi-exclamation-triangle me-1"></i> Validation Errors:</strong> @TempData["DebugErrors"]
                        </div>
                    }

                    <form asp-action="New" method="post">

                        <input type="hidden" asp-for="ProjectId" />

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold text-muted small text-uppercase">Task Title</label>
                            <input asp-for="Title" class="form-control form-control-lg bg-light border-0" placeholder="e.g. Design Homepage" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold text-muted small text-uppercase">Description</label>
                            <textarea asp-for="Description" class="form-control bg-light border-0" rows="4" placeholder="Describe what needs to be done..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-bold text-muted small text-uppercase">Media Content</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-link-45deg"></i></span>
                                <input asp-for="Content" class="form-control bg-light border-0" placeholder="https://youtube.com/... or image URL" />
                            </div>
                            <div class="form-text small text-muted">Optional: Add a link to a video, image, or external resource.</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UserId" class="form-label fw-bold text-muted small text-uppercase">Assign To</label>
                            <select asp-for="UserId" class="form-select bg-light border-0">
                                <option value="">-- Not assigned --</option>
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.Id">@user.UserName</option>
                                }
                            </select>
                        </div>

                        <div class="row mb-4">
                            <div class="col-6">
                                <label asp-for="StartDate" class="form-label fw-bold text-muted small text-uppercase">Start Date</label>
                                <input asp-for="StartDate" class="form-control bg-light border-0" type="date" />
                            </div>
                            <div class="col-6">
                                <label asp-for="EndDate" class="form-label fw-bold text-muted small text-uppercase">Due Date</label>
                                <input asp-for="EndDate" class="form-control bg-light border-0" type="date" />
                            </div>
                        </div>

                        <div class="mb-5">
                            <label asp-for="Status" class="form-label fw-bold text-muted small text-uppercase">Initial Status</label>
                            <select asp-for="Status" class="form-select bg-light border-0">
                                <option value="Not Started">Not Started</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Projects/Show/@Model.ProjectId" class="btn btn-light btn-lg px-4 text-muted">Cancel</a>

                            <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm fw-bold">
                                Create Task <i class="bi bi-check-lg ms-1"></i>
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>