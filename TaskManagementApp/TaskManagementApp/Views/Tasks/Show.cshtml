@model TaskManagementApp.Models.Task

@{
    ViewData["Title"] = Model.Title;
    var userCurentId = User.FindFirst("sub")?.Value;

    // Determinam culoarea badge-ului in functie de status
    string statusBadgeClass = Model.Status == "Completed" ? "bg-success" :
                              Model.Status == "In Progress" ? "bg-warning text-dark" : "bg-secondary";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg rounded-4 border-0 overflow-hidden mb-4">

                <div class="card-header bg-white p-4 border-bottom d-flex justify-content-between align-items-center">
                    <h2 class="mb-0 fw-bold text-dark">@Model.Title</h2>
                    <span class="badge @statusBadgeClass rounded-pill px-3 py-2 fs-6">
                        @Model.Status
                    </span>
                </div>

                <div class="card-body p-4">
                    <div class="row mb-4 g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center text-muted">
                                <i class="bi bi-calendar-range fs-5 me-2 text-primary opacity-75"></i>
                                <div>
                                    <small class="d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Timeline</small>
                                    <span class="fw-medium text-dark">
                                        @Model.StartDate.ToString("dd MMM") - @Model.EndDate.ToString("dd MMM yyyy")
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center text-muted">
                                <i class="bi bi-person-circle fs-5 me-2 text-primary opacity-75"></i>
                                <div>
                                    <small class="d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Assigned To</small>
                                    <span class="fw-medium text-dark">
                                        @(Model.User != null ? Model.User.UserName : "Unassigned")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-uppercase text-muted fw-bold small mb-2">Description</h6>
                        <p class="text-dark opacity-75" style="white-space: pre-line;">@Model.Description</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Content))
                    {
                        // 1. Curățăm link-ul de spații goale care pot strica afișarea
                        var rawUrl = Model.Content.Trim();

                        <div class="mb-4">
                            <h6 class="text-uppercase text-muted fw-bold small mb-2">Attached Media</h6>
                            <div class="card bg-light border-0 rounded-3 overflow-hidden">
                                <div class="card-body p-2">

                                    @* --- LOGICA YOUTUBE --- *@
                                    @if (rawUrl.Contains("youtube.com") || rawUrl.Contains("youtu.be"))
                                    {
                                        // Extragem ID-ul video-ului pentru a crea link-ul de embed corect
                                        string embedUrl = rawUrl;
                                        if (rawUrl.Contains("v="))
                                        {
                                            // Format lung: youtube.com/watch?v=IDulVideo&altceva...
                                            var videoId = rawUrl.Split("v=")[1].Split("&")[0];
                                            embedUrl = $"https://www.youtube.com/embed/{videoId}";
                                        }
                                        else if (rawUrl.Contains("youtu.be/"))
                                        {
                                            // Format scurt: youtu.be/IDulVideo
                                            var videoId = rawUrl.Split("youtu.be/")[1].Split("?")[0];
                                            embedUrl = $"https://www.youtube.com/embed/{videoId}";
                                        }

                                        <div class="ratio ratio-16x9 rounded overflow-hidden">
                                            <iframe src="@embedUrl" allowfullscreen></iframe>
                                        </div>
                                    }
                                    @* --- LOGICA IMAGINI (Case Insensitive) --- *@
                                    else if (new[] { ".jpg", ".jpeg", ".png", ".gif", ".webp" }.Any(ext => rawUrl.EndsWith(ext, StringComparison.OrdinalIgnoreCase)))
                                    {
                                        <img src="@rawUrl" class="img-fluid rounded w-100" alt="Task Attachment" style="max-height: 500px; object-fit: contain;" />
                                    }
                                    @* --- LOGICA DEFAULT (Link) --- *@
                                    else
                                    {
                                        <div class="d-flex align-items-center p-2">
                                            <i class="bi bi-link-45deg fs-3 me-2 text-primary"></i>
                                            <a href="@rawUrl" target="_blank" class="text-break text-decoration-none fw-medium">
                                                @if (rawUrl.Length > 50)
                                                {
                                                    @(rawUrl.Substring(0, 47) + "...")
                                                }
                                                else
                                                {
                                                    @rawUrl
                                                }
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    @if (ViewBag.EsteOrganizator == true || ViewBag.EsteAdmin == true || ViewBag.EsteMembru == true)
                    {
                        <div class="d-flex justify-content-end pt-3 border-top">
                            <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary rounded-pill me-2 px-4">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>

                            <form asp-controller="Tasks" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                                <button class="btn btn-outline-danger rounded-pill px-4" onclick="return confirm('Are you sure you want to delete this task?');">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>

            <div class="mb-5">
                @await Html.PartialAsync("_CommentListPartial", Model.Comments.OrderByDescending(c => c.Date).ToList())

                @if (ViewBag.EsteMembru || ViewBag.EsteOrganizator || ViewBag.EsteAdmin)
                {
                    <div class="card border-0 shadow-sm rounded-4 mt-4 bg-light">
                        <div class="card-body p-4">
                            <h6 class="fw-bold mb-3"><i class="bi bi-chat-dots me-2"></i>Leave a comment</h6>
                            <form asp-controller="Comments" asp-action="New" method="post">
                                <input type="hidden" name="TaskId" value="@Model.Id" />

                                <div class="mb-3">
                                    <textarea name="Content" class="form-control border-0 bg-white shadow-sm" rows="3" placeholder="Type your comment here..." required style="resize: none;"></textarea>
                                </div>

                                <div class="text-end">
                                    <button class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
                                        Post Comment <i class="bi bi-send ms-1"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>