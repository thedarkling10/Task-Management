@model IEnumerable<TaskManagementApp.Models.ApplicationUser>
@{
    ViewData["Title"] = "Admin - Users";
}

<div class="container mt-4">
    <h3>Gestionare Utilizatori</h3>
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>User</th>
                <th>Email</th>
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.UserName != User.Identity.Name)
                        {
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post"
                                  onsubmit="return confirm('Ești sigur? Această acțiune revocă toate drepturile și șterge userul.');">
                                <button type="submit" class="btn btn-danger btn-sm">Șterge / Revocă</button>
                            </form>
                        }
                        else
                        {
                            <span class="badge bg-success">Tu (Admin)</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>