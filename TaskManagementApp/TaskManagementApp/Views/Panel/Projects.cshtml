@model IEnumerable<TaskManagementApp.Models.Project>
@{
    ViewData["Title"] = "Admin - Projects";
}

<div class="container mt-4">
    <h3>Gestionare Proiecte</h3>
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Members</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var proj in Model)
            {
                <tr>
                    <td>@proj.Title</td>
                    <td>@proj.ProjectMembers.Count</td>
                    <td>
                        <a asp-controller="Projects" asp-action="Show" asp-route-id="@proj.Id" class="btn btn-info btn-sm text-white">
                            View / Edit
                        </a>

                        <form asp-action="DeleteProject" asp-route-id="@proj.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Delete this project and all tasks associated?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>